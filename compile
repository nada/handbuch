 #!/bin/sh

mkdir OUT
(cd OUT && wget -mkp -E -np -H -D127.0.0.1 http://127.0.0.1:8009/index.md)
sed -i -e 's/<head>/<head><meta charset="utf-8">/g' OUT/*/*html
sed -i -e 's/.md.html/.html/g' OUT/*/*html
for i in OUT/*/*html; do mv $i $(echo $i|sed -e s/.md.html/.html/); done
rsync -avzhP --delete OUT/127.0.0.1:8009/ www-data@feinheit06.nine.ch:feinheit.ch/htdocs/handbuch/
